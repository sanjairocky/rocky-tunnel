  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.js",
      "args": ["cluster"],
      "env": {
        "ENV_FILE": ".env",
        "DATA_PATH": ".",
        "MASTER_PORT": "8080",
        "AGENT_PORT": "3000",
        "MASTER_HOST": "localhost"
      }
    }
  ]
}
